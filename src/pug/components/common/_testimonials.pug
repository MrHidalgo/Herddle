// SECTION testimonials :: START

section#testimonials.testimonials

  .testimonials__wrapper

    .testimonials__quotes
      img(src='img/img-quotes.png' srcset='img/img-quotes@2x.png 2x')

    .testimonials__arrow-wrapper
      a.testimonials__arrow.testimonials__arrow--prev(href='#' title='')
        img(src='img/prev.svg')
      .testimonials__pagination
      a.testimonials__arrow.testimonials__arrow--next(href='#' title='')
        img(src='img/next.svg')

    mixin swiperContent()
      each val, idx in [1,2,3,4,5,6]
        .swiper-slide
          .testimonials__row
            .testimonials__wrapper-left
              img.testimonials__img(src='img/img-review.jpg' srcset='img/img-review@2x.jpg 2x')

              p.testimonials__name Samantha Willkinson
              p.testimonials__position Portfolio Manager at JBD Europe

            .testimonials__wrapper-right

              p.testimonials__text Herddle allowed us to cut the property administration process down by over 20% by giving us more control to track and manage our portfolio properties. Their agent app is an extremely powerful engine to our process.

              .c-btn__wrapper
                a.testimonials__btn.c-btn.c-btn--big.c-btn--bg.c-btn--bg--blackPearl(href='#' title='')
                  span Get Started

    +swiper('testimonialsSlider', 'swiperContent', false, false, false)

// SECTION testimonials :: END